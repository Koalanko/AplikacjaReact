{# templates/user/notifications.html.twig #}
import React from 'react';
<h1>Hello {{ user_first_name }}!</h1>
<p>You have {{ notifications[2] }} new notifications.</p>
<div id="root">
    {{ react(component='MyComponent', props={"name": user_first_name}) }}
</div>
<label for="text-input"></label><input type="text" id="text-input">

{{ form_widget(form.add_text) }}

<div id="text-container"></div>
<script>
    function addText() {
        const text = document.getElementById('text-input').value;
        document.getElementById('text-container').innerHTML += text;
    }
</script>
<script src="{{ asset('build/react.js') }}"></script>
<script src="{{ asset('build/MyComponent.js') }}"></script>